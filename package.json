  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -- turbo dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NebulaNexus4U/new-nightware.git"
  },
  "author": "Punith Raj T, Mohammed Abdul Wadudh Samdani",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NebulaNexus4U/new-nightware/issues"
  },
  "homepage": "https://github.com/NebulaNexus4U/new-nightware#readme",
  "devDependencies": {
    "dotenv-cli": "^7.0.0",
    "eslint": "latest",
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  }
}